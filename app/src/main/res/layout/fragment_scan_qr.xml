<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanQRFragment">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        autoFocusButtonColor="@android:color/white"
        autoFocusButtonVisible="true"
        flashButtonColor="@android:color/white"
        flashButtonVisible="true"
        frameColor="@android:color/white"
        frameCornersSize="50dp"
        frameAspectRatioWidth="1"
        frameAspectRatioHeight="1"
        frameSize="0.75"
        frameThickness="2dp"
        maskColor="#77000000"/>

</FrameLayout>
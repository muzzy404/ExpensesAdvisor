<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckItemsActivity">

    <TextView
        style="@style/CustomTitleStyle"
        android:gravity="center"
        android:paddingTop="@dimen/check_card_padding"
        android:paddingBottom="@dimen/check_card_padding"
        android:text="@string/sample_check_date" />

    <TextView
        style="@style/CustomTitleStyle"
        android:text="@string/title_set_common_category"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/check_card_padding"
        android:layout_marginEnd="@dimen/check_card_padding"
        android:background="@drawable/edit_rounded_field">
        <Spinner
            android:id="@+id/common_category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/items_recycle_view"
        android:scrollbars="vertical"
        android:paddingTop="@dimen/check_card_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>